rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Rule 1: User Profile (Ensures a user can only read/write their own profile)
    match /users/{userId} {
      allow read, create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId;
    }

    // Rule 2: Chat Session History (CRITICAL MVP RULE)
    // Ensures a user can only perform read/write/update on their own chat history.
    match /chatSessions/{sessionId} {
      allow read, write: if request.auth.uid == sessionId;
    }
  }
}